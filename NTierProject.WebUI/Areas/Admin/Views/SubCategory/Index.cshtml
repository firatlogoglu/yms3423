@model List<SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Basic Table
        </header>
        <table class="table">
            <thead>
                <tr>
                    <th>Alt Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>Etiket</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Name</td>
                   <td>@item.Description</td>
                   <td>@item.Tag</td>
                   <td>
                       @Html.ActionLink("Güncelle","Update",new { id=item.ID},new { @class="btn btn-warning"})
                       |
                       @Html.ActionLink("Sil","Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                   </td>
               </tr>
           }
            </tbody>
        </table>
    </section>
</div>

