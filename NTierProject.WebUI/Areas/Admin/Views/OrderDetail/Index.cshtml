@model List<OrderDetail>
@{
    ViewBag.Title = "Sipariş Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Düzenle</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>
                            <a href="@Url.Action("Update","OrderDetail",new { id=item.ID})"><i class="icon-pencil"></i></a>
                            |
                            <a href="@Url.Action("Delete","OrderDetail",new { id=item.ID})"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>