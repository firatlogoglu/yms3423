@model AppUser
@{
    ViewBag.Title = Model.Name + " " + Model.SurName + " (" + Model.Email + ")" + " İsimli Kullanıcının Şifresini Sıfırla";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                @ViewBag.Title
            </header>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Şifreyi Sıfırla" class="btn btn-danger" />
                    </div>
                }
            </div>
        </section>
    </div>
</div>

<div>
    @Html.ActionLink("Üye Listesine Geri Dön", "Index")
</div>