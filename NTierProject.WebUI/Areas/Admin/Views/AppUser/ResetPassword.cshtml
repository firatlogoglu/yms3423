@model AppUser
@{
    ViewBag.Title = Model.Name + " " + Model.SurName + " (" + Model.Email + ")" + " İsimli Kullanıcının Şifresini Sıfırla";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.Name - @ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <h2>@Model.Name  @Model.SurName (@Model.Email) isimli hesabın şifresi sıfırlansın mı?</h2>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Şifreyi Sıfırla" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Kullanıcı Listesine Geri Dön", "Index")
</div>